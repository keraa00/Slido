<!DOCTYPE html>
<html>
  <head>
    <title>Registracija</title>
    <link rel='stylesheet' href='/stylesheets/registracija.css' />
    <!-- Latest compiled and minified CSS -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">

    <!-- jQuery library -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.1/jquery.min.js"></script>

    <!-- Latest compiled JavaScript -->
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css"/>

  </head>
  <body>
  <style>
    .navigacija {
      list-style-type: none;
      margin: 0;
      padding: 0;
      overflow: hidden;
      background-color: #333;
    }

    li {
      float: left;
    }

    .navigacija li a {
      display: block;
      color: white;
      text-align: center;
      padding: 14px 16px;
      text-decoration: none;
    }

    /* Change the link color to #111 (black) on hover */
    .navigacija li a:hover {
      background-color: #111;
      text-decoration: none;
    }
    body {
      font-family: 'Roboto', sans-serif;
      font-size: 16px;
      background: var(--light-color);
      margin: 00px;
    }

  </style>

  <ul class="navigacija">
    <li><a class="active" href="http://localhost:3000">Home</a></li>
    <li><a href="/admin">Admin</a></li>
    <li><a href="/predavac">Predavac</a></li>
    <li><a href="/publika">Publika</a></li>

    <ul class="nav navbar-nav navbar-right">
      <li ><a href="/predavac/login"><span class="glyphicon glyphicon-user"></span> Log In</a></li>
      <i id="check" class="fas fa-moon" style="font-size: 35px; color:white;margin-right:25px;margin-top:7px; cursor: pointer" onclick="changeStatus()"></i>

    </ul>
  </ul>






  <div class="uredi">
    <form id="login-forma" action="/predavac/registracija" method="POST">
      <h3 id="forma-naslov">Unesite podatke </h3>
      <br>
      <div class="form-group">
        <input type="text" id="name" name="name" class="form-control" placeholder="Unesite ime:" required>
      </div>
      <br>
      <div class="form-group">
        <input type="text" id="prezime" name="prezime"  class="form-control" placeholder="Unesite prezime:" required>
      </div><br>
      <div>
        <input type="email" id="email" name="email" class="form-control" placeholder="Unesite email:" required>
      </div><br>
      <div>
        <input type="password" id="password" name="password"  class="form-control"placeholder="Unesite password:" required>
      </div><br>
      <div>
        <input type="password" id="password2" name="password2" class="form-control" placeholder="Potvrdite password:" required>
      </div><br>

      <ul>
        <% if(typeof errors != 'undefined') { %> <% errors.forEach(error=>{%>
          <li><%= error.message %></li>
        <%}) %> <%}%>
      </ul>

      <ul>
        <%if(messages.success_msg){%>
          <li><%= messages.success_msg%></li>
        <% } %>
      </ul>

      <ul>
        <% if(messages.error) {%>
          <li><%= messages.error%></li>
        <%}%>
      </ul>
      <button type="submit" class="btn btn-dark" id="dugme">Registruj se</button><br><br>
      <div>
        <a href="/predavac/login">Vec imate racun? Login ovdje</a>

      </div>

    </form>
    </form>
  </div>
  </div>
  </div>


  </div>


  <script>


    const check =document.getElementById("check")


    if (localStorage.getItem('darkMode')===null){
      localStorage.setItem('darkMode', "false");
    }
    const link = document.createElement('link');
    link.rel = 'stylesheet';
    document.getElementsByTagName('HEAD')[0].appendChild(link);


    checkStatus()
    function checkStatus(){
      if (localStorage.getItem('darkMode')==="true"){
        check.checked = true;
        link.href = '../stylesheets/dark.css';
      }else{
        check.checked = false;
        link.href = '';
      }
    }

    function changeStatus(){


      if (localStorage.getItem('darkMode')==="true"){
        localStorage.setItem('darkMode', "false");
        link.href = '';
      } else{
        localStorage.setItem('darkMode', "true");
        link.href = '../stylesheets/dark.css';
      }
    }




  </script>
  </body>
</html>
